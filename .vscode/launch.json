    {
      "type": "node",
      "request": "launch",
      "name": "server",
      "program": "${workspaceFolder}/node_modules/.bin/gulp",
      "args": ["devServer"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
