{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "@config": ["./config"],
      "@config/*": ["./config/*"],
      "@features": ["./src/client/features"],
      "@features/*": ["./src/client/features/*"],
      "@ui": ["./src/client/ui"],
      "@ui/*": ["./src/client/ui/*"],
      "@constants": ["./src/client/constants"],
      "@constants/*": ["./src/client/constants/*"],
      "@lib": ["./src/client/lib"],
      "@lib/*": ["./src/client/lib/*"],
      "@app": ["./src/server/app"],
      "@app/*": ["./src/server/app/*"],
      "@domain": ["./src/server/domain"],
      "@domain/*": ["./src/server/domain/*"],
      "@infra": ["./src/server/infra"],
      "@infra/*": ["./src/server/infra/*"],
      "@interfaces": ["./src/server/interfaces"],
      "@interfaces/*": ["./src/server/interfaces/*"]
    },
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
